<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/plantacion"
    android:orientation="vertical"
    tools:context=".DetalleRegistro">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:cardCornerRadius="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="REGISTRO"
                android:textAlignment="center"
                android:textColor="#FF9800"
                android:textSize="30sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgRegistro"
                android:layout_width="96dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_baseline_image_search_24" />

            <TextView
                android:id="@+id/txtObservacionDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="16dp"
                android:text="TextView"
                android:textAlignment="center"
                android:textColor="@color/material_dynamic_neutral20"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temperatura"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtTemperaturaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Humedad"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtHumedadDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luminosidad"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtLuminosidadDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ventilacion"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtVentilacionDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Riego"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtRiegoDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtFechaDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hora"
                android:textColor="#2196F3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txtHoraDetalle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="8dp"
                android:text="TextView"
                android:textColor="@color/purple"
                android:textSize="18sp" />
        </LinearLayout>


        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            app:menu_colorNormal="@color/purple"
            app:menu_colorPressed="@color/teal_200"
            app:menu_fab_size="normal"
            app:menu_icon="@drawable/ic_agregar"
            app:menu_openDirection="down"
            app:menu_showShadow="true">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_eliminar"
                app:fab_colorNormal="#F44336"
                app:fab_colorPressed="#F44336"
                app:fab_showShadow="true"
                app:fab_size="mini" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/editButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_editar"
                app:fab_colorNormal="#2196F3"
                app:fab_colorPressed="#2196F3"
                app:fab_showShadow="true"
                app:fab_size="mini"/>
        </com.github.clans.fab.FloatingActionMenu>

    </androidx.cardview.widget.CardView>
</ScrollView>